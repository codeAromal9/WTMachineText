<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="1dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/productImage_1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/productTitle_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/protitle"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/productImage_1"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout_1"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout_1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/PriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Price : "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/productTitle_1"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout_1"/>
            <TextView
                android:id="@+id/productPrice_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="109.95"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/PriceTV"
                app:layout_constraintStart_toEndOf="@+id/PriceTV"
                app:layout_constraintTop_toTopOf="@+id/PriceTV" />
            <TextView
                android:id="@+id/CategoryTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category : "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/PriceTV"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout_1"/>
            <TextView
                android:id="@+id/productCategory_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="men's clothing"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/CategoryTV1"
                app:layout_constraintTop_toTopOf="@+id/CategoryTV1"
                app:layout_constraintBottom_toBottomOf="@+id/CategoryTV1"/>
            <TextView
                android:id="@+id/RatingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating : "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/CategoryTV1"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout_1"/>
            <TextView
                android:id="@+id/productRating_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.9"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/RatingTV"
                app:layout_constraintTop_toTopOf="@+id/RatingTV"
                app:layout_constraintBottom_toBottomOf="@+id/RatingTV"/>
            <TextView
                android:id="@+id/CountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count : "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/RatingTV"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout_1"/>
            <TextView
                android:id="@+id/productCount_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/CountTV"
                app:layout_constraintTop_toTopOf="@+id/CountTV"
                app:layout_constraintBottom_toBottomOf="@+id/CountTV"/>


            <TextView
                android:id="@+id/DescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/CountTV"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout_1"/>
            <TextView
                android:id="@+id/productDescription_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/des"
                app:layout_constraintTop_toBottomOf="@+id/DescriptionTV"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout_1"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout_1"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout_1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>